---
// Define the structure for each case study item for type safety
interface CaseStudy {
  title: string;
  description: string;
  imageUrl: string;
  imageAlt: string;
  link: string;
  isReversed?: boolean; // Optional property to reverse the layout
}

// Array of your service/case study data.
// This makes it easy to add, remove, or reorder items later.
const services: CaseStudy[] = [
  {
    title: "Mega Food Park Projects",
    description: "As MoFPI-empanelled consultants, we guide you through the Mega Food Park scheme. We help secure viability gap funding of ₹50 Crores by providing turnkey solutions, from DPR preparation to securing backward and forward linkages.",
    imageUrl: "/image1.png",
    imageAlt: "A vibrant, modern farm with rows of crops under a clear sky.",
    link: "/services/mega-food-parks"
  },
  {
    title: `"Operation Greens" Scheme`,
    description: `Leverage the "Operation Greens" scheme for the Tomato, Onion, and Potato (TOP) value chain. We help you access this ₹500 crore initiative to protect farmers, stabilize prices, and reduce post-harvest losses.`,
    imageUrl: "/image2.jpg",
    imageAlt: "A basket of fresh tomatoes, onions, and potatoes.",
    link: "/services/operation-greens",
    isReversed: true // This card will have the image on the left
  },
  {
    title: "Integrated Cold Chain Projects",
    description: "Secure up to ₹10 Crores in funding under the MoFPI's Integrated Cold Chain scheme. We assist in establishing seamless farm-to-consumer infrastructure, including processing centers, reefer logistics, and distribution hubs.",
    imageUrl: "/image3.jpg",
    imageAlt: "Interior of a large, modern cold storage warehouse.",
    link: "/services/cold-chain"
  },
  {
    title: "Agro Processing Cluster Projects",
    description: "Develop a modern food processing hub with the APC scheme. We help establish clusters with shared infrastructure like cold storage, warehouses, and labs, linking farmers to processors and markets for enhanced efficiency.",
    imageUrl: "/image4.png",
    imageAlt: "An aerial view of an industrial food processing facility.",
    link: "/services/apc-projects",
    isReversed: true // This card will also be reversed
  },
  {
    title: "CEFPPC Scheme",
    description: "The CEFPPC scheme supports new and existing units to increase value addition and reduce waste. We help you secure grants covering plant & machinery and technical civil work to modernize your food processing capacities.",
    imageUrl: "/image5.png",
    imageAlt: "Stainless steel machinery in a clean food processing plant.",
    link: "/services/cefppc-scheme"
  },
];
---

<section id="Casestudies" class="py-16 bg-gray-50 sm:py-24">
  <div class="max-w-6xl px-4 mx-auto sm:px-6 lg:px-8" >
    <!-- Section Title -->
    <div class="text-center">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl" style="font-family: 'Poppins'">
        Solutions in Action
      </h2>
      <div class="w-24 h-1 mx-auto mt-4 bg-yellow-500 rounded"></div>
    </div>

    <!-- Cards Container -->
    <div class="mt-16 space-y-16">
      {services.map((service) => (
        <article
  class:list={[
    "flex flex-col md:flex-row bg-white rounded-lg shadow-lg overflow-hidden transition-all duration-300 hover:shadow-2xl hover:-translate-y-1 h-80", // fixed height
    { "md:flex-row-reverse": service.isReversed }
  ]}
>
  <!-- Image Section -->
  <div class="md:w-1/2 h-40 md:h-full">
    <img
      src={service.imageUrl}
      alt={service.imageAlt}
      class="object-cover w-full h-full"
    />
  </div>

  <!-- Content Section -->
  <div class="flex flex-col justify-center p-8 md:w-1/2 sm:p-12 h-40 md:h-full">
    <h3 class="text-2xl font-bold text-gray-900" style="font-family: 'Poppins'">
      {service.title}
    </h3>
    <p class="mt-4 text-base leading-relaxed text-gray-600" style="font-family: 'Poppins'">
      {service.description}
    </p>
    <div class="mt-6">
      <a href={service.link} class="inline-block px-6 py-3 font-semibold text-gray-800 transition bg-transparent border border-gray-400 rounded-full hover:bg-green-500 hover:text-white hover:border-green-500" style="font-family: 'Poppins'">
        Learn More
      </a>
    </div>
  </div>
</article>

      ))}
    </div>
  </div>
</section>
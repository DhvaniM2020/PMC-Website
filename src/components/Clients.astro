---
interface Logo {
  name: string;
  logoUrl: string;
}

const logos: Logo[] = [
  { name: "Vasant Masala", logoUrl: "/vasant masala.png" },
  { name: "EPICOS", logoUrl: "/epicos.png" },
  { name: "Bake Buds", logoUrl: "/bake buds.png" },
  { name: "ATHOS", logoUrl: "/athos.png" },
];
---

<div id="empanelment" class="py-12 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-8 lg:px-16">
    <div class="text-center mb-10">
      <h3 class="text-3xl sm:text-4xl md:text-5xl font-extrabold text-black tracking-wider">
        Happy Clients
      </h3>
    </div>

    <!-- Responsive Flex Logos -->
    <div class="flex flex-wrap justify-center items-center gap-8 sm:gap-10 lg:gap-16">
      {logos.map((logo) => (
        <img
          class="h-30 sm:h-16 md:h-20 lg:h-24 w-auto object-contain opacity-80 transition-all duration-300 hover:opacity-100"
          src={logo.logoUrl}
          alt={logo.name}
          title={logo.name}
        />
      ))}
    </div>
  </div>
</div>

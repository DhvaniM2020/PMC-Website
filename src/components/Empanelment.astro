---
interface Logo {
  name: string;
  logoUrl: string;
}

const logos: Logo[] = [
  { name: "Ministry of Food Processing Industry", logoUrl: "/mofpi-logo.jpg" },
  { name: "Gujarat Agro Industries Corporation", logoUrl: "/images.png" },
  { name: "GUJCOMASOL", logoUrl: "/100-5.png" },
  { name: "Bank of Baroda", logoUrl: "/BankOfBarodaLogo.svg.png" },
  { name: "INDEXT-b", logoUrl: "/indexta.png" },
  { name: "PMFME", logoUrl: "/PMFME.png" },
  { name: "Andra Bank", logoUrl: "/Andra bank.png" },
];
---

<div id="empanelment" class="py-12 bg-white" style={{ fontFamily: "Poppins, sans-serif" }}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-10">
      <h3 class="text-4xl font-bold text-black tracking-wider sm:text-3xl">
        In Partnership with key Government & Financial Institutions
      </h3>
    </div>

    <!-- Horizontal Scroll Container -->
    <div class="overflow-x-auto scrollbar-thin scrollbar-thumb-gray-400 scrollbar-track-gray-100">
      <div class="flex space-x-10 px-4">
        {logos.map((logo) => (
          <div class="flex-shrink-0 flex justify-center items-center">
            <img
              class="h-24 w-auto object-contain opacity-80 transition-all duration-300 hover:opacity-100"
              src={logo.logoUrl}
              alt={logo.name}
              title={logo.name}
            />
          </div>
        ))}
      </div>
    </div>
  </div>
</div>

<header id="navbar" class="sticky top-0 z-50 bg-white transition-all duration-300 shadow">
  <div class="max-w-7xl mx-auto px-4 py-3 flex items-center justify-between">
    <!-- Logo + Contact -->
    <div class="flex items-center space-x-6">
      <a href="/" class="flex items-center space-x-2">
  <img src="/Abhyuday-New-Logo.jpg" alt="Abhyuday Logo" class="rounded-full h-15 w-auto transition-transform duration-300 ease-in-out hover:scale-120" />
  <span
  class="text-green-800 font-bold tracking-"
  style="font-family: 'Mozilla Headline'; font-size: clamp(1.1rem, 2vw, 1.9rem);"
>
  Agri & Food Processing
</span>

</a>

      
    </div>

    <!-- Nav -->
    <nav class="hidden md:flex space-x-8 text-md font-medium text-gray-700">
      <a href="#" class="hover:text-green-600" style="font-family: 'Mozilla Headline'">Home</a>
      <a href="#" class="hover:text-green-600" style="font-family: 'Mozilla Headline'">Projects</a>
      <a href="#" class="hover:text-green-600" style="font-family: 'Mozilla Headline'">About Us</a>
      <a href="#" class="hover:text-green-600" style="font-family: 'Mozilla Headline'">Shop</a>
    </nav>

    <div class="flex items-center space-x-6">
      <a href="#" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-4xl text-md font-medium transition"
      style="font-family: 'Mozilla Headline'">
        Get In Touch 
      </a>
    </div>
  </div>
</header>

<script>
  window.addEventListener('scroll', () => {
    const navbar = document.getElementById('navbar');
    if (window.scrollY > 50) {
      navbar.classList.add('bg-white/70', 'backdrop-blur-md');
      navbar.classList.remove('bg-white');
    } else {
      navbar.classList.remove('bg-white/70', 'backdrop-blur-md');
        
    }
  });
</script>

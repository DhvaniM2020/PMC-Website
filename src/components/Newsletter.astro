<section id="contact" class="bg-gray-50 py-12">
  <div class="max-w-3xl mx-auto px-4 text-center">
    <div class="text-center mb-12">
      <div class="text-center">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl" style="font-family: 'Poppins'">
        Stay Updated
      </h2>
      <div class="w-24 h-1 mx-auto mt-4 bg-yellow-500 rounded"></div>
      </div>
      <p class="mt-4 max-w-2xl mx-auto text-xl text-gray-600">
        Subscribe to our newsletter for the latest updates on projects and innovations.
      </p>
    </div>
    
    <form 
  class="flex flex-col sm:flex-row gap-4 justify-center items-center"
  onsubmit="return handleSubscribe(event)"
>
  <!-- Name Field -->
  <div class="relative w-full sm:w-auto">
    <span class="absolute top-1/2 left-3 transform -translate-y-1/2 text-blue-600">
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 12c2.67 0 8 1.34 8 4v2H4v-2c0-2.66 5.33-4 8-4zm0-2a4 4 0 110-8 4 4 0 010 8z"/></svg>
    </span>
    <input 
      type="text" 
      name="name" 
      placeholder="Your Name"
      required
      class="w-full sm:w-auto pl-10 pr-4 py-3 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-600 bg-gray-50 transition"
    />
  </div>

  <!-- Email Field -->
  <div class="relative w-full sm:w-auto">
    <span class="absolute top-1/2 left-3 transform -translate-y-1/2 text-blue-600">
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/></svg>
    </span>
    <input 
      type="email" 
      name="email" 
      placeholder="Your Email"
      required
      class="w-full sm:w-auto pl-10 pr-4 py-3 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-600 bg-gray-50 transition"
    />
  </div>

  <!-- Submit Button -->
  <button 
    type="submit"
    class="bg-blue-600 text-white px-6 py-3 rounded-md font-medium hover:bg-green-700 transition duration-200 shadow-md hover:shadow-lg text-md"
  >
    Subscribe
  </button>
</form>

<!-- Tooltip Placeholder & JS Validation -->
<div id="newsletter-error" class="text-red-500 text-sm mt-2 text-center hidden"></div>




  </div>
</section>
<script>
  function handleSubscribe(event) {
    event.preventDefault();

    const name = event.target.name.value.trim();
    const email = event.target.email.value.trim();
    const errorDiv = document.getElementById("newsletter-error");

    if (!name || !email) {
      errorDiv.textContent = "Please fill out all fields correctly.";
      errorDiv.classList.remove("hidden");
      return false;
    }

    errorDiv.classList.add("hidden");
    // Optionally send request or show success message
    alert("Subscribed successfully!");
    return true;
  }
</script>